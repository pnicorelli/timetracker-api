{

  "env": {
    "node": true,
    "es6": true
  },

  "globals": {
  },

  "rules": {
    "semi": ["error", "always"],
    "comma-dangle": 1,
    "curly": 1,
    "strict": 1,
    "no-use-before-define": 0,
    "brace-style": 1,
    "comma-spacing": 1,
    "key-spacing": 1,
    "quotes": [2, "single"]
  }
}
